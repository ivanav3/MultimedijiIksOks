<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5EEEE"
    android:gravity="center"
    tools:context=".MainActivity"
    android:configChanges="orientation|screenSize">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <Button
            android:id="@+id/bu1"
            style="@style/stiloviDugmad2" />

        <Button
            android:id="@+id/bu2"
            style="@style/stiloviDugmad2" />

        <Button
            android:id="@+id/bu3"
            style="@style/stiloviDugmad2" />

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Kliknite na polje koje želite da izaberete"
            android:textColor="#315161"
            android:textSize="20sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/bu4"
            style="@style/stiloviDugmad2" />

        <Button
            android:id="@+id/bu5"
            style="@style/stiloviDugmad2" />

        <Button
            android:id="@+id/bu6"
            style="@style/stiloviDugmad2" />

        <Button
            android:id="@+id/restart"
            style="@style/stiloviOpcije2"

            android:onClick="restartuj"
            android:text="Restart" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/bu7"
            style="@style/stiloviDugmad2" />

        <Button
            android:id="@+id/bu8"
            style="@style/stiloviDugmad2" />

        <Button
            android:id="@+id/bu9"
            style="@style/stiloviDugmad2" />

        <Button
            android:id="@+id/izlaz"

            style="@style/stiloviOpcije2"
            android:onClick="izlaz"

            android:text="Završi partiju" />
    </TableRow>

</TableLayout>